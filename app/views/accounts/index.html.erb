<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Credit Amount</th>
    <th>Debit Amount</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.type %></td>
    <td><%= account.credits_balance %></td>
    <td><%= account.debits_balance %></td>
    <td><%= link_to 'Show', account_path(account.id) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Account', new_account_path %>
