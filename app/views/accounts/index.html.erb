<h1 class="title">Listing Accounts</h2>
<table class="balance">
	<tr>
		<th>Name</th>
		<th>Type</th>
		<th>Credit Amount</th>
		<th>Debit Amount</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @accounts.each do |account| %>
	<% if can? :read, account%>
	<tr>
		<td><%= account.name %></td>
		<td><%= account.type %></td>
		<td><%= account.credits_balance %></td>
		<td><%= account.debits_balance %></td>
		<td><%= link_to (image_tag "/assets/info.png"), account_path(account.id)%></td>
		<% if can? :delete, account%>
		<td><%= link_to (image_tag "/assets/destroy.png"), account_path(account.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	</tr>
	<% end %>
	<% end %>
</table>
<br />
<%= link_to 'New Account', new_account_path, {:class=>"button"} %> 