<h1 class="title">Listing Users</h1>

<table class="balance">
	<tr>
		<th>User Name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Current Sign in</th>
		<th colspan="2">Actions</th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.username %></td>
		<td><%= user.email %></td>
		<td><%= user.role %></td>
		<td><%= user.current_sign_in_at %></td>
		<td><%= link_to (image_tag "/assets/reset.png"), logon_path(user), method: :put, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to (image_tag "/assets/destroy.png"), logon_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<%end%>
</table>

<br />

