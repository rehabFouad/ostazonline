<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Credit Account</th>
    <th>Credit Amount</th>
    <th>Debit Account</th>
    <th>Debit Amount</th>
    
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.description %></td>
    <td><%= link_to transaction.credit_accounts[0].name, account_path(transaction.credit_accounts[0].id) %></td>
    <td><%= transaction.credit_amounts[0].amount %></td>
    <td><%= link_to transaction.debit_accounts[0].name, account_path(transaction.debit_accounts[0].id) %></td>
    <td><%= transaction.debit_amounts[0].amount %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path %>
